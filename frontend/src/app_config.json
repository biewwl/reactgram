{
  "app.name": "grid",
  "app.logo": "icon-park-twotone:view-grid-card",
  "app.slogan": "Share moments!",
  "app.routes": {
    "home": "/",
    "login": "/login",
    "register": "/register",
    "profile": "/:profile",
    "followers": "/:profile/followers",
    "following": "/:profile/following",
    "direct": "/direct",
    "saved": "/saved",
    "post": "/post/:postId"
  },
  "app.components": {
    "LoginRegister": {
      "login": {
        "textToAlternateForm": "Don't have an account?",
        "linkTextToAlternateForm": "Sign up!",
        "btnSubmitText": "Enter",
        "inputs": [
          { "name": "nick", "type": "text", "placeholder": "Nick" },
          { "name": "password", "type": "password", "placeholder": "Password" }
        ]
      },
      "register": {
        "textToAlternateForm": "You have an account?",
        "linkTextToAlternateForm": "Sign in!",
        "btnSubmitText": "Enter",
        "inputs": [
          { "name": "name", "type": "text", "placeholder": "Name" },
          { "name": "nick", "type": "text", "placeholder": "Nick" },
          { "name": "email", "type": "email", "placeholder": "Email" },
          { "name": "password", "type": "password", "placeholder": "Password" }
        ],
        "error.messages": {
          "name.small": "This name seems too short!",
          "name.big": "That name seems too big!",
          "name.required": "This name seems too short!",
          "nick.small": "HAHA! I barely see your nickname!",
          "nick.big": "OMG! Why so many characters?",
          "nick.required": "This name seems too short!",
          "email.small": "Impossible for this to be an email!",
          "email.big": "I can't register you with a very large email.",
          "email.required": "Psst! Where is your email?",
          "email.format": "In what world would that be an email?",
          "password.small": "Put a few more characters and I'll let you in.",
          "password.big": "You're writing a book in the password field?",
          "password.required": "I didn't like your security without using a password!"
        }
      }
    },
    "Header": {
      "search.input.placeholder": "Find an user...",
      "nav.icons": {
        "home": "mingcute:home-1-line",
        "direct": "ph:paper-plane-tilt",
        "saved": "ic:sharp-bookmark-border",
        "notify": "fe:notice-push",
        "menu": "gg:menu-right"
      }
    },
    "Profile": {
      "actions.icons": {
        "direct": "ph:paper-plane-tilt",
        "follow": "tabler:user-plus",
        "unfollow": "tabler:user-minus",
        "config": "carbon:overflow-menu-horizontal",
        "requested": "line-md:loading-loop"
      }
    }
  }
}
